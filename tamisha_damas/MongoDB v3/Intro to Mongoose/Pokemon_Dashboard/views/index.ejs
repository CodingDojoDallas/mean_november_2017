<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pokemon Dashboard</title>
  </head>
  <body>
    <h4>Here are all the Pokemons!</h4>
    <br>
    <br>

    <% for(var x of pokemons) { %>
      <p><a href="/<%= x._id %>"><%= x.name %></a></p>
      <p><%= x.type %></p>
      <p><%= x.category %></p>
      <form action="/pokemons/<%= x._id %>/destroy" method='post'>
        <button type="submit">Delete</button>
      </form>
      <hr>
    <% } %>

    <a href="/pokemons/new">Go Back</a>
  </body>
</html>
