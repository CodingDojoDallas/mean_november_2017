<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Basic Mongoose</title>
  </head>
  <body>
    <% for(var x in users) { %>

      <p>User: <%= users[x].first_name %> <%= users[x].last_name %></p>
      <p>Age: <%= users[x].age %></p>
      <p>Email: <%= users[x].email %></p>
      <hr>

    <% } %>
    <br>
    <br>
    <form action="/users" method="post">
      <label>First Name:</label>
      <input type="text" name="first_name">
      <br>
      <br>
      <label>Last Name:</label>
      <input type="text" name="last_name">
      <br>
      <br>
      <label>Age:</label>
      <input type="text" name="age">
      <br>
      <br>
      <label>Email:</label>
      <input type="text" name="email">
      <button type="submit">Submit</button>
    </form>
  </body>
</html>
