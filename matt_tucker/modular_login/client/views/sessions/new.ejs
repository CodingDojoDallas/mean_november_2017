<html>
<head>
    <title>Login</title>
</head>
<body>
    <h5>Login</h5>

    <% if (errors) { %>
        <ul>
            <% for (var x in errors) { %>
                <li><%= errors[x].message %></li>
            <% } %>
        </ul>
    <% } %>

    <form action="/sessions" method="post">
        <p>Email: <input type="email" name="email" /></p>
        <p>Password: <input type="password" name="password" /></p>

        <button type="submit">Login</button>
    </form>
</body>
</html>